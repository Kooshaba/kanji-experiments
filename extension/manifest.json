{
  "manifest_version": 3,
  "name": "English Helper",
  "version": "1.0",
  "description": "Learn English words and phrases.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ]
}
